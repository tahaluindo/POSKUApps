                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/text_discount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_medium"
